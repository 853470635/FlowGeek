<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/emotion_layout"
    android:orientation="vertical"
    android:background="@color/background"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="130dp"/>

    <include layout="@layout/view_horizontal_line"/>

    <!--the sort of emotion-->
    <LinearLayout
        android:id="@+id/tab_nav"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_qq"
            android:text="@string/emotion_qq"
            android:background="@drawable/selector_emotion_item"
            android:gravity="center"
            android:padding="5dp"
            android:textColor="@color/emotion_item"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/iv_backspace"
            android:background="@drawable/selector_backspace"
            android:src="@mipmap/icon_emotion_backspace"
            android:gravity="center"
            android:padding="5dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:contentDescription="@null" />
    </LinearLayout>

    <include layout="@layout/view_horizontal_line"/>

</LinearLayout>