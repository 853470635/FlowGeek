<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" android:drawable="@color/emotion_item_selected"/>
    <item android:state_selected="true" android:drawable="@color/emotion_item_selected"/>
    <item android:state_focused="true" android:drawable="@color/emotion_item_selected"/>
    <item>
        <shape>
            <stroke
                android:color="?attr/horizontal_divider"
                android:width="1px"
                android:dashWidth="0dp"/>
            <solid android:color="?attr/keyboard_emotion_tab_item_unselected"/>
        </shape>
    </item>
</selector>